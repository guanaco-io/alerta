<features name='guanaco-alerta-${project.version}'>

    <repository>mvn:org.apache.camel.karaf/apache-camel/${camel.version}/xml/features</repository>

    <feature name="guanaco-alerta" version="${project.version}">
        <feature version="${camel.version}">camel-http4</feature>
        <feature version="${activemq.version}">activemq-camel</feature>
        <bundle dependency="true">mvn:org.scala-lang/scala-library/${scala.version}</bundle>
        <bundle dependency="true">mvn:com.google.code.gson/gson/${gson.version}</bundle>
        <bundle dependency="true">wrap:mvn:io.spray/spray-json_${scala.binary.version}/${spray-json.version}</bundle>
        <bundle>mvn:io.guanaco.alerta/api_${scala.binary.version}/${project.version}</bundle>
        <bundle>mvn:io.guanaco.alerta/impl_${scala.binary.version}/${project.version}</bundle>
    </feature>

</features>
